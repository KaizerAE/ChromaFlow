# ========== Application ==========
NODE_ENV=development
APP_NAME=ChromaFlow
APP_URL=http://localhost:3000

# ========== Backend API ==========
BACKEND_PORT=8000
BACKEND_URL=http://localhost:8000

# ========== AI Engine ==========
AI_ENGINE_PORT=8001
AI_ENGINE_URL=http://localhost:8001

# ========== Database ==========
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=chromaflow_dev
DATABASE_USER=chromaflow
DATABASE_PASSWORD=chromaflow_password
DATABASE_URL=postgresql://chromaflow:chromaflow_password@localhost:5432/chromaflow_dev

# ========== Redis ==========
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# ========== JWT Authentication ==========
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ========== OpenAI API ==========
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# ========== GitHub Integration ==========
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret
GITHUB_CALLBACK_URL=http://localhost:8000/auth/github/callback

# ========== Email Service (Optional) ==========
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ========== AWS (Optional) ==========
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=chromaflow-uploads

# ========== Monitoring & Logging ==========
SENTRY_DSN=your-sentry-dsn-here
LOG_LEVEL=info

# ========== Frontend Environment ==========
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_AI_URL=http://localhost:8001
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_APP_NAME=ChromaFlow
